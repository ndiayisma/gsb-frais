{# templates/fiche_frais/new.html.twig #}

{% extends 'base.html.twig' %}

{% block title %}New FicheFrais{% endblock %}

{% block body %}

    <div class="container mx-auto py-8 px-4 mt-20">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">New FicheFrais</h1>
        {{ form_start(form) }}
        <div class="overflow-x-auto bg-white shadow-md rounded-lg relative z-50">
            {{ form_label(form.km, null, {'label_attr': {'class': 'text-sm font-medium text-gray-500'}} )}}
            {{ form_widget(form.km, {'attr': {'class': 'rounded-lg border border-gray-200 p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent'}}) }}
            {{ form_errors(form.km) }}
        </div>
        <div class="overflow-x-auto bg-white shadow-md rounded-lg relative z-50">
            {{ form_label(form.etape, null, {'label_attr': {'class': 'text-sm font-medium text-gray-500'}}) }}
            {{ form_widget(form.etape, {'attr': {'class': 'rounded-lg border border-gray-200 p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent'}}) }}
            {{ form_errors(form.etape) }}
        </div>
        <div class="overflow-x-auto bg-white shadow-md rounded-lg relative z-50">
            {{ form_label(form.nuit, null, {'label_attr': {'class': 'text-sm font-medium text-gray-500'}}) }}
            {{ form_widget(form.nuit, {'attr': {'class': 'rounded-lg border border-gray-200 p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent'}}) }}
            {{ form_errors(form.nuit) }}
        </div>
        <div class="overflow-x-auto bg-white shadow-md rounded-lg relative z-50">
            {{ form_label(form.resto, null, {'label_attr': {'class': 'text-sm font-medium text-gray-500'}}) }}
            {{ form_widget(form.resto, {'attr': {'class': 'rounded-lg border border-gray-200 p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent'}}) }}
            {{ form_errors(form.resto) }}
        </div>
        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Valider</button>
        {{ form_end(form) }}
    </div>

    {{ form_start(formHF) }}

    <div class="container mx-auto py-8 px-4 mt-20">
        <h1 class="text-3xl font-bold text-gray-800 mb-6">New LigneFraisHorsForfait</h1>
        {{ form_start(formHF) }}
        <div class="overflow-x-auto bg-white shadow-md rounded-lg relative z-50">
            {{ form_label(formHF.libelle, null, {'label_attr': {'class': 'text-sm font-medium text-gray-500'}} )}}
            {{ form_widget(formHF.libelle, {'attr': {'class': 'rounded-lg border border-gray-200 p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent'}}) }}
            {{ form_errors(formHF.libelle) }}
        </div>
        <div class="overflow-x-auto bg-white shadow-md rounded-lg relative z-50">
            {{ form_label(formHF.montant, null, {'label_attr': {'class': 'text-sm font-medium text-gray-500'}}) }}
            {{ form_widget(formHF.montant, {'attr': {'class': 'rounded-lg border border-gray-200 p-2 focus:outline-none focus:ring-2 focus:ring-indigo-500 focus:border-transparent'}}) }}
            {{ form_errors(formHF.montant) }}
        </div>

        <button type="submit" class="bg-blue-500 text-white px-4 py-2 rounded">Ajouter</button>
        {{ form_end(formHF) }}
    </div>
    {{ form_end(formHF) }}




    <a href="{{ path('app_fiche_frais') }}">Retour dans la liste</a>
{% endblock %}